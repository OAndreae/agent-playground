{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then uv run ruff format \"$FILE_PATH\"; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.ts || \"$FILE_PATH\" == *.tsx ]]; then pnpm lint --fix; fi"
          }
        ]
      }
    ]
  }
}
